  }

  .footer-section-{{ footer_id }} .footer__newsletter-form .footer__button,
  .footer-section-{{ footer_id }} .footer__newsletter-form .footer-newsletter__button {
    padding: 0.75rem 1.1rem;
    height: 48px;
    min-height: 48px;
    width: auto;
    box-sizing: border-box;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-feedback {
