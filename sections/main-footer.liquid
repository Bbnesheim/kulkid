    min-height: 1.25rem;
    font-size: 0.85rem;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-feedback--success {
    color: #d9ffdb;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-feedback--error {
    color: #ffe1e1;
  }

  .footer-section-{{ footer_id }} .footer__social {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    text-align: center;
    color: {{ text_color }};
    --footer-social-gap-effective: var(--footer-social-gap, 12px);
    --footer-social-size-effective: var(--footer-social-size, 28px);
    gap: var(--footer-social-gap-effective);
