  .footer-section-{{ footer_id }} .footer__block--social_icons,
  .footer-section-{{ footer_id }} .footer__block--social {
    flex: none;
    max-width: 100%;
    align-self: start;
    padding: 0;
    margin: clamp(1rem, 3vw, 2rem) 0 0;
    width: 100%;
  }

  .footer-section-{{ footer_id }} .footer__block--payments {
    flex: none;
    padding: 0;
    align-items: center;
    align-self: center;
    text-align: center;
    width: 100%;
    max-width: clamp(420px, 48vw, 640px);
    margin: clamp(1.5rem, 3vw, 2.5rem) auto 0;
  }

  .footer-section-{{ footer_id }} .footer__block .footer__heading,
  .footer-section-{{ footer_id }} .footer__block h4 {
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .footer-section-{{ footer_id }} .footer__block--newsletter {
    padding: 0;
    align-items: center;
    align-self: center;
  }

  .footer-section-{{ footer_id }} .footer__newsletter {
    width: 100%;
    height: 100%;
