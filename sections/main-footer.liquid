  .footer-section-{{ footer_id }} .footer-newsletter__body--with-image {
    display: grid;
    grid-template-columns: minmax(0, 1fr) clamp(80px, var(--newsletter-icon-width, 180px), 240px);
    gap: var(--newsletter-icon-gap, 18px);
