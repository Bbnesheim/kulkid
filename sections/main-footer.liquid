  .footer-section-{{ footer_id }} .footer-newsletter__media {
    width: clamp(80px, var(--newsletter-icon-width, 180px), 240px);
    max-width: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

