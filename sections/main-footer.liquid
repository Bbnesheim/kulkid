{% assign footer_id = section.id | replace: '_', '' | downcase %}
{% assign gradient_color_ids = 'gradient_color_1,gradient_color_2,gradient_color_3,gradient_color_4,gradient_color_5,gradient_color_6,gradient_color_7' | split: ',' %}
{% assign gradient_colors = '' %}
{% for color_id in gradient_color_ids %}
  {% assign color_value = section.settings[color_id] %}
  {% if color_value != blank %}
    {% if gradient_colors != '' %}
      {% assign gradient_colors = gradient_colors | append: ', ' %}
    {% endif %}
    {% assign gradient_colors = gradient_colors | append: color_value %}
  {% endif %}
{% endfor %}
{% if gradient_colors == '' %}
  {% assign gradient_colors = '#ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57, #ff9ff3, #54a0ff' %}
{% endif %}
{% assign text_color = section.settings.master_text_color | default: '#ffffff' %}

{% style %}
  .footer-section-{{ footer_id }} {
    position: relative;
    color: {{ text_color }};
    {% if section.settings.enable_gradient_animation %}
      background: linear-gradient({{ section.settings.gradient_direction }}deg, {{ gradient_colors }});
      background-size: {{ section.settings.gradient_size }}% {{ section.settings.gradient_size }}%;
      animation: footer-gradient-{{ footer_id }} {{ section.settings.animation_duration }}s ease infinite;
    {% elsif section.settings.static_background_color != blank %}
      background: {{ section.settings.static_background_color }};
    {% else %}
      background: linear-gradient({{ section.settings.gradient_direction }}deg, {{ gradient_colors }});
    {% endif %}
    padding: {{ section.settings.footer_padding }}px;
    overflow: hidden;
  }

  {% if section.settings.enable_gradient_animation %}
    @keyframes footer-gradient-{{ footer_id }} {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  {% endif %}

  .footer-section-{{ footer_id }} a {
    color: inherit;
  }

  .footer-section-{{ footer_id }} .footer__inner {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .footer-section-{{ footer_id }} .footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2rem;
    padding: 2rem 0;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .footer-section-{{ footer_id }} .footer__block {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .footer-section-{{ footer_id }} .footer__heading {
    font-size: var(--footer-heading-size, 1.15rem);
    font-weight: 600;
    margin: 0;
    letter-spacing: 0.02em;
  }

  .footer-section-{{ footer_id }} .footer__text,
  .footer-section-{{ footer_id }} .footer__list,
  .footer-section-{{ footer_id }} .footer__newsletter-copy {
    font-size: var(--footer-text-size, 0.95rem);
    line-height: 1.6;
    opacity: 0.92;
  }

  .footer-section-{{ footer_id }} .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-section-{{ footer_id }} .footer__link {
    font-size: var(--footer-link-size, 0.95rem);
    text-decoration: none;
    opacity: 0.9;
    transition: opacity 0.25s ease, transform 0.25s ease;
  }

  .footer-section-{{ footer_id }} .footer__link:hover,
  .footer-section-{{ footer_id }} .footer__link:focus-visible {
    opacity: 1;
    transform: translateX(2px);
  }

  .footer-section-{{ footer_id }} .footer__newsletter-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-icon {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-icon img {
    display: block;
    width: 100%;
    height: auto;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-form {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: stretch;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-field {
    flex: 1 1 260px;
    min-width: 220px;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-form input[type='email'] {
    width: 100%;
    height: 52px;
    padding: 0 16px;
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.35);
    background: #ffffff;
    color: #1c1c1c;
    font-size: 0.95rem;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-form input[type='email']:focus-visible {
    outline: 3px solid rgba(255, 255, 255, 0.8);
    outline-offset: 3px;
    box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.25);
    transform: translateY(-1px);
  }

  .footer-section-{{ footer_id }} .footer__button {
    flex: 0 0 auto;
    height: 52px;
    padding: 0 28px;
    border-radius: 14px;
    border: none;
    cursor: pointer;
    font-size: var(--footer-button-size, 0.95rem);
    font-weight: 600;
    text-transform: uppercase;
    color: #ffffff;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    box-shadow: 0 10px 24px rgba(118, 75, 162, 0.35);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .footer-section-{{ footer_id }} .footer__button:hover,
  .footer-section-{{ footer_id }} .footer__button:focus-visible {
    transform: translateY(-1px);
    box-shadow: 0 14px 28px rgba(118, 75, 162, 0.45);
    outline: 3px solid rgba(255, 255, 255, 0.6);
    outline-offset: 3px;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-feedback {
    width: 100%;
    min-height: 1.25rem;
    font-size: 0.85rem;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-feedback--success {
    color: #d9ffdb;
  }

  .footer-section-{{ footer_id }} .footer__newsletter-feedback--error {
    color: #ffe1e1;
  }

  .footer-section-{{ footer_id }} .footer__social {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.85rem;
  }

  .footer-section-{{ footer_id }} .footer__social-link {
    width: var(--footer-social-icon-size, 48px);
    height: var(--footer-social-icon-size, 48px);
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.15);
    transition: transform 0.25s ease, background 0.25s ease;
  }

  .footer-section-{{ footer_id }} .footer__social-link:hover,
  .footer-section-{{ footer_id }} .footer__social-link:focus-visible {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.3);
    outline: 3px solid rgba(255, 255, 255, 0.6);
    outline-offset: 3px;
  }

  .footer-section-{{ footer_id }} .footer__social-link img,
  .footer-section-{{ footer_id }} .footer__social-link svg {
    width: 60%;
    height: auto;
  }

  .footer-section-{{ footer_id }} .footer__payments {
    display: flex;
    flex-wrap: nowrap;
    gap: 1rem;
    align-items: center;
    overflow-x: auto;
    padding-bottom: 0.25rem;
    scrollbar-width: none;
  }

  .footer-section-{{ footer_id }} .footer__payments::-webkit-scrollbar {
    display: none;
  }

  .footer-section-{{ footer_id }} .footer__payment-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
    min-width: 74px;
    padding: 0.45rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(4px);
  }

  .footer-section-{{ footer_id }} .footer__payment-item img,
  .footer-section-{{ footer_id }} .footer__payment-item svg {
    display: block;
    width: auto;
    height: var(--footer-payment-icon-height, 32px);
  }

  .footer-section-{{ footer_id }} .footer__policies {
    margin-top: {{ section.settings.policies_bottom_margin }}px;
    padding-top: {{ section.settings.policies_bottom_margin }}px;
    border-top: 1px solid rgba(255, 255, 255, 0.35);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    font-size: 0.85rem;
  }

  .footer-section-{{ footer_id }} .footer__policy-separator {
    opacity: 0.6;
  }

  .footer-section-{{ footer_id }} .footer__copyright {
    margin-top: {{ section.settings.copyright_top_margin }}px;
    text-align: center;
    font-size: 0.85rem;
    opacity: 0.85;
  }

  .footer-section-{{ footer_id }} .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    border: 0 !important;
  }

  @media (max-width: 1024px) {
    .footer-section-{{ footer_id }} {
      padding: {{ section.settings.footer_padding | times: 0.8 | round }}px;
    }
  }

  @media (max-width: 768px) {
    .footer-section-{{ footer_id }} {
      padding: {{ section.settings.footer_padding | times: 0.65 | round }}px;
    }

    .footer-section-{{ footer_id }} .footer__grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-section-{{ footer_id }} .footer__block {
      align-items: center;
    }

    .footer-section-{{ footer_id }} .footer__newsletter-brand {
      flex-direction: column;
      text-align: center;
    }

    .footer-section-{{ footer_id }} .footer__newsletter-form {
      flex-direction: column;
      align-items: stretch;
    }

    .footer-section-{{ footer_id }} .footer__newsletter-form input[type='email'],
    .footer-section-{{ footer_id }} .footer__button {
      width: 100%;
      margin-top: 0.5rem;
    }

    .footer-section-{{ footer_id }} .footer__social {
      justify-content: center;
    }

    .footer-section-{{ footer_id }} .footer__payments {
      justify-content: center;
    }
  }
{% endstyle %}

<footer class="footer-section-{{ footer_id }}" role="contentinfo" aria-label="{{ section.settings.footer_aria_label | default: 'Kul Kid footer' }}">
  <div class="footer__inner">
    <div class="footer__grid">
      {% for block in section.blocks %}
        <div class="footer__block footer__block--{{ block.type }}" {{ block.shopify_attributes }}>
          {% case block.type %}
            {% when 'newsletter' %}
              {% assign heading_size = block.settings.heading_size | default: 28 | plus: 0 %}
              {% assign description_size = block.settings.description_size | default: 16 | plus: 0 %}
              {% assign button_size = block.settings.button_size | default: 15 | plus: 0 %}
              {% assign icon_width = block.settings.club_icon_width | default: 160 | plus: 0 %}

              {% if block.settings.heading != blank %}
                <h2 class="footer__heading" style="--footer-heading-size: {{ heading_size }}px;">{{ block.settings.heading }}</h2>
              {% endif %}

              {% if block.settings.club_icon != blank or block.settings.description != blank %}
                <div class="footer__newsletter-brand">
                  {% if block.settings.club_icon != blank %}
                    <div class="footer__newsletter-icon" style="max-width: {{ icon_width }}px;">
                      <img src="{{ block.settings.club_icon | image_url: width: 320 }}" alt="{{ block.settings.club_icon_alt | default: 'Kul Kid klubbikon' | escape }}" loading="lazy">
                    </div>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <div class="footer__newsletter-copy" style="--footer-text-size: {{ description_size }}px;">{{ block.settings.description }}</div>
                  {% endif %}
                </div>
              {% endif %}

              {% assign newsletter_form_id = 'ContactFooter-' | append: block.id %}
              {% assign newsletter_aria_label = block.settings.heading | default: 'Kul Kid nyhetsbrev' %}
              {% form 'customer', id: newsletter_form_id, class: 'footer__newsletter-form', 'aria-label': newsletter_aria_label %}
                <input type="hidden" name="contact[tags]" value="newsletter">

                <div class="footer__newsletter-field">
                  <label class="visually-hidden" for="{{ newsletter_form_id }}-email">Din e-postadresse</label>
                  <input
                    id="{{ newsletter_form_id }}-email"
                    type="email"
                    name="contact[email]"
                    value="{{ form.email }}"
                    placeholder="{{ block.settings.email_placeholder | default: 'Din e-postadresse' }}"
                    autocapitalize="off"
                    autocomplete="email"
                    spellcheck="false"
                    required
                    {% if form.errors contains 'email' %}aria-invalid="true"{% endif %}
                    aria-describedby="{{ newsletter_form_id }}-feedback"
                  >
                </div>

                <button
                  type="submit"
                  class="footer__button"
                  style="--footer-button-size: {{ button_size }}px;"
                  aria-label="{{ block.settings.button_text | default: 'Få 15% nå' }}"
                >
                  {{ block.settings.button_text | default: 'Få 15% nå' }}
                </button>

                <div class="footer__newsletter-feedback" id="{{ newsletter_form_id }}-feedback" role="status" aria-live="polite">
                  {% if form.posted_successfully? %}
                    <p class="footer__newsletter-feedback--success">{{ block.settings.success_message | default: section.settings.newsletter_success_fallback }}</p>
                  {% elsif form.errors %}
                    <p class="footer__newsletter-feedback--error">
                      {{ form.errors.translated_fields['email'] | default: 'E-postadresse' }} {{ form.errors.messages['email'] | default: 'er ugyldig eller allerede registrert.' }}
                    </p>
                  {% endif %}
                </div>
              {% endform %}

            {% when 'link_group' %}
              {% assign heading_size = block.settings.heading_size | default: 20 | plus: 0 %}
              {% assign link_size = block.settings.link_size | default: 15 | plus: 0 %}

              {% if block.settings.heading != blank %}
                <h2 class="footer__heading" style="--footer-heading-size: {{ heading_size }}px;">{{ block.settings.heading }}</h2>
              {% endif %}
              <ul class="footer__list" style="--footer-link-size: {{ link_size }}px;">
                {% assign menu_handle = block.settings.menu %}
                {% if menu_handle != blank and linklists[menu_handle] and linklists[menu_handle].links.size > 0 %}
                  {% for link in linklists[menu_handle].links %}
                    <li><a class="footer__link" href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                {% elsif block.settings.show_all_collections %}
                  {% assign rendered_collections = 0 %}
                  {% for collection in collections %}
                    {% if collection == blank or collection.all_products_count == 0 %}
                      {% continue %}
                    {% endif %}
                    <li><a class="footer__link" href="{{ collection.url }}">{{ collection.title }}</a></li>
                    {% assign rendered_collections = rendered_collections | plus: 1 %}
                    {% if rendered_collections >= block.settings.collection_limit %}
                      {% break %}
                    {% endif %}
                  {% endfor %}
                {% else %}
                  <li><span class="footer__text" style="--footer-text-size: {{ link_size }}px;">Velg en meny for å vise lenker i denne kolonnen.</span></li>
                {% endif %}
                {% if block.settings.view_all_label != blank and block.settings.view_all_url != blank %}
                  <li><a class="footer__link" href="{{ block.settings.view_all_url }}">{{ block.settings.view_all_label }}</a></li>
                {% endif %}
              </ul>

            {% when 'social_icons', 'social' %}
              {% assign heading_size = block.settings.heading_size | default: 20 | plus: 0 %}
              {% assign icon_size = block.settings.icon_size | default: 28 | plus: 0 %}
              {% assign fallback_size = heading_size | minus: 4 %}
              {% if fallback_size < 12 %}
                {% assign fallback_size = 12 %}
              {% endif %}

              {% if block.settings.heading != blank %}
                <h2 class="footer__heading" style="--footer-heading-size: {{ heading_size }}px;">{{ block.settings.heading }}</h2>
              {% endif %}

              {% assign networks = 'instagram,facebook,tiktok' | split: ',' %}
              {% assign has_social = false %}

              <div class="footer__social" role="list">
                {% for network in networks %}
                  {% assign url_key = network | append: '_url' %}
                  {% assign url = block.settings[url_key] %}
                  {% if url != blank %}
                    {% assign has_social = true %}
                    {% assign network_label = '' %}
                    {% case network %}
                      {% when 'instagram' %}
                        {% assign network_label = 'Instagram' %}
                      {% when 'facebook' %}
                        {% assign network_label = 'Facebook' %}
                      {% else %}
                        {% assign network_label = 'TikTok' %}
                    {% endcase %}
                    <a
                      class="footer__social-link"
                      style="--footer-social-icon-size: {{ icon_size }}px;"
                      href="{{ url }}"
                      target="_blank"
                      rel="noopener"
                      aria-label="Følg Kul Kid på {{ network_label }}"
                    >
                      <span class="visually-hidden">Følg Kul Kid på {{ network_label }}</span>
                      {% render 'icon-social', name: network %}
                    </a>
                  {% endif %}
                {% endfor %}

                {% unless has_social %}
                  <span class="footer__text" style="--footer-text-size: {{ fallback_size }}px;">Legg til Instagram-, Facebook- eller TikTok-lenker direkte i blokkinnstillingene.</span>
                {% endunless %}
              </div>

            {% when 'payments' %}
              {% assign heading_size = block.settings.heading_size | default: 20 | plus: 0 %}
              {% assign icon_height = block.settings.icon_height | default: 28 | plus: 0 %}
              {% assign empty_state_size = heading_size | minus: 4 %}
              {% if empty_state_size < 12 %}
                {% assign empty_state_size = 12 %}
              {% endif %}

              {% if block.settings.heading != blank %}
                <h2 class="footer__heading" style="--footer-heading-size: {{ heading_size }}px;">{{ block.settings.heading }}</h2>
              {% endif %}
              <div class="footer__payments" style="--footer-payment-icon-height: {{ icon_height }}px;">
                {% if block.settings.show_visa %}
                  <div class="footer__payment-item">
                    {% if block.settings.visa_icon != blank %}
                      <img src="{{ block.settings.visa_icon | image_url: width: 140 }}" alt="Visa" loading="lazy">
                    {% else %}
                      {% render 'icon-payment', name: 'visa' %}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_mastercard %}
                  <div class="footer__payment-item">
                    {% if block.settings.mastercard_icon != blank %}
                      <img src="{{ block.settings.mastercard_icon | image_url: width: 140 }}" alt="Mastercard" loading="lazy">
                    {% else %}
                      {% render 'icon-payment', name: 'mastercard' %}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_amex %}
                  <div class="footer__payment-item">
                    {% if block.settings.amex_icon != blank %}
                      <img src="{{ block.settings.amex_icon | image_url: width: 140 }}" alt="American Express" loading="lazy">
                    {% else %}
                      {% render 'icon-payment', name: 'amex' %}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_paypal %}
                  <div class="footer__payment-item">
                    {% if block.settings.paypal_icon != blank %}
                      <img src="{{ block.settings.paypal_icon | image_url: width: 140 }}" alt="PayPal" loading="lazy">
                    {% else %}
                      {% render 'icon-payment', name: 'paypal' %}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_apple_pay %}
                  <div class="footer__payment-item">
                    {% if block.settings.apple_pay_icon != blank %}
                      <img src="{{ block.settings.apple_pay_icon | image_url: width: 140 }}" alt="Apple Pay" loading="lazy">
                    {% else %}
                      {% render 'icon-payment', name: 'apple_pay' %}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_klarna %}
                  <div class="footer__payment-item">
                    {% if block.settings.klarna_icon != blank %}
                      <img src="{{ block.settings.klarna_icon | image_url: width: 140 }}" alt="Klarna" loading="lazy">
                    {% else %}
                      {% render 'icon-payment', name: 'klarna' %}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.custom_payment_svg != blank %}
                  <div class="footer__payment-item">
                    <img src="{{ block.settings.custom_payment_svg | image_url: width: 160 }}" alt="{{ block.settings.custom_payment_label | default: 'Tilleggsbetaling' | escape }}" loading="lazy">
                  </div>
                {% endif %}

                {% if block.settings.show_visa == false and block.settings.show_mastercard == false and block.settings.show_amex == false and block.settings.show_paypal == false and block.settings.show_apple_pay == false and block.settings.show_klarna == false and block.settings.custom_payment_svg == blank %}
                  <span class="footer__text" style="--footer-text-size: {{ empty_state_size }}px;">Aktiver betalingsikoner i blokkinnstillingene.</span>
                {% endif %}
              </div>
          {% endcase %}
        </div>
      {% endfor %}
    </div>

    <div class="footer__policies">
      {% assign policy_count = 0 %}

      {% if shop.privacy_policy %}
        <a href="{{ shop.privacy_policy.url }}">{{ shop.privacy_policy.title }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if shop.terms_of_service %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ shop.terms_of_service.url }}">{{ shop.terms_of_service.title }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if shop.refund_policy %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ shop.refund_policy.url }}">{{ shop.refund_policy.title }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if shop.shipping_policy %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ shop.shipping_policy.url }}">{{ shop.shipping_policy.title }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if shop.subscription_policy %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ shop.subscription_policy.url }}">{{ shop.subscription_policy.title }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if section.settings.cookie_preferences_link != blank %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ section.settings.cookie_preferences_link }}">{{ section.settings.cookie_preferences_text | default: 'Informasjonskapsler' }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if section.settings.contact_info_link != blank %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ section.settings.contact_info_link }}">{{ section.settings.contact_info_text | default: 'Kontaktinformasjon' }}</a>
        {% assign policy_count = policy_count | plus: 1 %}
      {% endif %}

      {% if section.settings.legal_notice_link != blank %}
        {% if policy_count > 0 %}<span class="footer__policy-separator">•</span>{% endif %}
        <a href="{{ section.settings.legal_notice_link }}">{{ section.settings.legal_notice_text | default: 'Juridiske retningslinjer' }}</a>
      {% endif %}
    </div>

    <div class="footer__copyright">
      {{ section.settings.copyright_text | default: '© ' | append: shop.name | append: ' ' | append: now | date: '%Y' }}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Kul Kid Main Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Bakgrunn"
    },
    {
      "type": "checkbox",
      "id": "enable_gradient_animation",
      "label": "Aktiver animert bakgrunn",
      "default": true
    },
    {
      "type": "color",
      "id": "static_background_color",
      "label": "Statisk bakgrunnsfarge",
      "default": "#334fb4"
    },
    {
      "type": "range",
      "id": "animation_duration",
      "label": "Animasjonslengde",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "s",
      "default": 15
