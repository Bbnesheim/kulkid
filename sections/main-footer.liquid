    max-width: 100%;
    height: auto;
    display: block;
    margin-top: 0;
  }

  .footer-section-{{ footer_id }} .footer-newsletter__card img[src=''] {
    display: none;
  }

  .footer-section-{{ footer_id }} .footer-newsletter__content {
    position: relative;
    z-index: 20;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
