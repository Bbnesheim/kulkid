<script>
  (function() {
    class KidsHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 3;
        this.categoryOffset = 0;
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.setupHeroSlider();
        this.setupCategorySlider();
        this.setupTouchEvents();
        this.setupAutoplay();
      }

      setupHeroSlider() {
        const container = this.querySelector('[data-slider="hero"]');
        const dots = this.querySelectorAll('.ai-kids-hero-dot-{{ ai_gen_id }}');
        const prevBtn = this.querySelector('[data-nav="prev"]:not([data-target])');
        const nextBtn = this.querySelector('[data-nav="next"]:not([data-target])');

        if (!container) return;

        dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        if (prevBtn) prevBtn.addEventListener('click', () => this.previousSlide());
        if (nextBtn) nextBtn.addEventListener('click', () => this.nextSlide());
      }

      setupCategorySlider() {
        const prevBtn = this.querySelector('[data-target="categories"][data-nav="prev"]');
        const nextBtn = this.querySelector('[data-target="categories"][data-nav="next"]');

        if (prevBtn) prevBtn.addEventListener('click', () => this.scrollCategories('prev'));
        if (nextBtn) nextBtn.addEventListener('click', () => this.scrollCategories('next'));
      }

      setupTouchEvents() {
        const heroContainer = this.querySelector('[data-slider="hero"]');
        const categoryContainer = this.querySelector('[data-slider="categories"]');

        if (heroContainer) {
          this.setupSwipeEvents(heroContainer, (direction) => {
            if (direction === 'left') this.nextSlide();
            if (direction === 'right') this.previousSlide();
          });
        }

        if (categoryContainer) {
          this.setupSwipeEvents(categoryContainer, (direction) => {
            if (direction === 'left') this.scrollCategories('next');
            if (direction === 'right') this.scrollCategories('prev');
          });
        }
      }

      setupSwipeEvents(element, callback) {
        let startX = 0;
        let startY = 0;
        let endX = 0;
        let endY = 0;

        element.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          startY = e.touches[0].clientY;
        }, { passive: true });

        element.addEventListener('touchmove', (e) => {
          endX = e.touches[0].clientX;
          endY = e.touches[0].clientY;
        }, { passive: true });

        element.addEventListener('touchend', () => {
          const deltaX = endX - startX;
          const deltaY = endY - startY;
          const minSwipeDistance = 50;

          if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > minSwipeDistance) {
            callback(deltaX > 0 ? 'right' : 'left');
          }
        }, { passive: true });
      }

      setupAutoplay() {
        if (!this.hasAttribute('data-autoplay')) return;

        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, 5000);

        this.addEventListener('mouseenter', () => {
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
          }
        });

        this.addEventListener('mouseleave', () => {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, 5000);
        });
      }

      goToSlide(index) {
        if (this.isTransitioning || index === this.currentSlide) return;

        this.isTransitioning = true;
        this.currentSlide = index;

        const container = this.querySelector('[data-slider="hero"]');
        const dots = this.querySelectorAll('.ai-kids-hero-dot-{{ ai_gen_id }}');

        if (container) {
          container.style.transform = `translateX(-${this.currentSlide * 100}%)`;
        }

        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === this.currentSlide);
        });

        setTimeout(() => {
          this.isTransitioning = false;
        }, 400);
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.totalSlides;
        this.goToSlide(nextIndex);
      }

      previousSlide() {
        const prevIndex = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.goToSlide(prevIndex);
      }

      scrollCategories(direction) {
        const container = this.querySelector('[data-slider="categories"]');
        if (!container) return;

        const itemWidth = 100;
        const visibleItems = Math.floor(container.parentElement.offsetWidth / itemWidth);
        const maxOffset = Math.max(0, (8 - visibleItems) * itemWidth);

        if (direction === 'next') {
          this.categoryOffset = Math.min(this.categoryOffset + itemWidth * 2, maxOffset);
        } else {
          this.categoryOffset = Math.max(this.categoryOffset - itemWidth * 2, 0);
        }

        container.style.transform = `translateX(-${this.categoryOffset}px)`;
      }
    }

    customElements.define('kids-hero-{{ ai_gen_id }}', KidsHero{{ ai_gen_id }});
  })();
</script>

