{% liquid
  assign name = name | default: ''
%}
{% case name %}
  {% when 'instagram' %}
    <img src="{{ 'icon-instagram.svg' | asset_url }}" alt="" role="presentation" loading="eager" decoding="auto" width="24" height="24">
  {% when 'facebook' %}
    <img src="{{ 'icon-facebook.svg' | asset_url }}" alt="" role="presentation" loading="eager" decoding="auto" width="24" height="24">
  {% when 'tiktok' %}
    <img src="{{ 'icon-tiktok.svg' | asset_url }}" alt="" role="presentation" loading="eager" decoding="auto" width="24" height="24">
{% endcase %}
