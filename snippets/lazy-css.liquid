{%- liquid
  assign link_id = ''
  if id
    assign link_id = id | replace: '.', '-' | handleize
  endif
-%}
<link
  rel="preload"
  as="style"
  href="{{ file | asset_url }}"
  onload="this.onload=null;this.rel='stylesheet'"{% if link_id != blank %} id="lazy-css-{{ link_id }}"{% endif %}>
<noscript>{{ file | asset_url | stylesheet_tag }}</noscript>
