    {{ 'payment-visa.svg' | inline_asset_content }}
  {% when 'mastercard' %}
    {{ 'payment-mastercard.svg' | inline_asset_content }}
  {% when 'amex' %}
    {{ 'payment-amex.svg' | inline_asset_content }}
  {% when 'paypal' %}
    {{ 'payment-paypal.svg' | inline_asset_content }}
  {% when 'apple_pay' %}
    {{ 'payment-apple-pay.svg' | inline_asset_content }}
  {% when 'klarna' %}
    {{ 'payment-klarna.svg' | inline_asset_content }}
