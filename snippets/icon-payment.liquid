{% liquid
  assign name = name | default: ''
%}
{% case name %}
  {% when 'visa' %}
    <img src="{{ 'payment-visa.svg' | asset_url }}" alt="Visa" loading="eager" decoding="auto" width="120" height="60">
  {% when 'mastercard' %}
    <img src="{{ 'payment-mastercard.svg' | asset_url }}" alt="Mastercard" loading="eager" decoding="auto" width="120" height="60">
  {% when 'amex' %}
    <img src="{{ 'payment-amex.svg' | asset_url }}" alt="American Express" loading="eager" decoding="auto" width="120" height="60">
  {% when 'paypal' %}
    <img src="{{ 'payment-paypal.svg' | asset_url }}" alt="PayPal" loading="eager" decoding="auto" width="120" height="60">
  {% when 'apple_pay' %}
    <img src="{{ 'payment-apple-pay.svg' | asset_url }}" alt="Apple Pay" loading="eager" decoding="auto" width="120" height="60">
  {% when 'klarna' %}
    <img src="{{ 'payment-klarna.svg' | asset_url }}" alt="Klarna" loading="eager" decoding="auto" width="120" height="60">
{% endcase %}
