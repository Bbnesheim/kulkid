{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}
{% assign newsletter_placeholder_default = 'newsletter.placeholder' | t %}
{% assign newsletter_placeholder = block.settings.email_placeholder | default: newsletter_placeholder_default %}
{% assign newsletter_cta_default = 'newsletter.cta' | t %}
{% assign newsletter_cta = block.settings.button_text | default: newsletter_cta_default %}
{% assign newsletter_success_default = 'newsletter.success' | t %}
{% assign newsletter_success = block.settings.success_message | default: newsletter_success_default %}
{% assign newsletter_success = newsletter_success | strip %}
{% if newsletter_success == blank %}
  {% assign newsletter_success_translation = 'general.newsletter_form.confirmation' | t %}
  {% if newsletter_success_translation == 'general.newsletter_form.confirmation' %}
    {% assign newsletter_success_translation = 'Thanks! Please check your inbox to confirm.' %}
  {% endif %}
  {% assign newsletter_success = newsletter_success_translation %}
{% endif %}

{% assign newsletter_margin_top = block.settings.newsletter_margin_top | default: 0 | plus: 0 %}
{% assign about_content_id = 'ai-footer-accordion-' | append: ai_gen_id | append: '-about' %}
{% assign categories_content_id = 'ai-footer-accordion-' | append: ai_gen_id | append: '-categories' %}
{% assign help_content_id = 'ai-footer-accordion-' | append: ai_gen_id | append: '-help' %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    {% if block.settings.enable_gradient_animation %}
      background: linear-gradient({{ block.settings.gradient_direction }}deg, {{ block.settings.gradient_color_1 }}, {{ block.settings.gradient_color_2 }}, {{ block.settings.gradient_color_3 }}, {{ block.settings.gradient_color_4 }}, {{ block.settings.gradient_color_5 }}, {{ block.settings.gradient_color_6 }}, {{ block.settings.gradient_color_7 }});
      background-size: {{ block.settings.gradient_size }}% {{ block.settings.gradient_size }}%;
      animation: ai-footer-gradient-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease infinite;
    {% else %}
      background: {{ block.settings.static_background_color }};
    {% endif %}
    padding: {{ block.settings.footer_padding }}px {{ block.settings.footer_padding | times: 0.5 }}px;
    color: {{ block.settings.master_text_color | default: 'white' }};
    position: relative;
    overflow: hidden;
  }

  {% if block.settings.enable_gradient_animation %}
    @keyframes ai-footer-gradient-{{ ai_gen_id }} {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  {% endif %}

  .ai-footer-content-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .ai-footer-main-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: {{ block.settings.column_gap }}px;
    margin-bottom: {{ block.settings.section_spacing }}px;
    align-items: start;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-footer-column-{{ ai_gen_id }}[data-footer-accordion] {
    gap: 12px;
  }

  .ai-footer-column-{{ ai_gen_id }} h3,
  .kk-newsletter__title {
    color: {{ block.settings.master_text_color | default: 'white' }};
    margin: 0 0 {{ block.settings.heading_bottom_margin }}px 0;
    font-size: 18px;
    font-weight: 600;
    height: 22px;
    display: flex;
    align-items: center;
  }

  .ai-footer-column-{{ ai_gen_id }} a {
    color: {{ block.settings.master_text_color | default: 'white' }};
    text-decoration: none;
    margin-bottom: {{ block.settings.link_spacing }}px;
    opacity: 0.9;
    transition: opacity 0.3s ease;
    font-size: 14px;
  }

  .ai-footer-column-{{ ai_gen_id }} a:hover {
    opacity: 1;
  }

  .ai-footer-accordion__toggle {
    display: none;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    background: none;
    border: none;
    color: {{ block.settings.master_text_color | default: 'white' }};
    font: inherit;
    padding: 0;
    cursor: pointer;
    text-align: left;
  }

  .ai-footer-accordion__toggle:focus {
    outline: 2px solid rgba(255, 255, 255, 0.6);
    outline-offset: 4px;
  }

  .ai-footer-accordion__icon {
    position: relative;
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .ai-footer-accordion__icon::before,
  .ai-footer-accordion__icon::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 12px;
    height: 2px;
    background: currentColor;
    transition: transform 0.3s ease;
    transform-origin: center;
  }

  .ai-footer-accordion__icon::before {
    transform: translate(-50%, -50%) rotate(0deg);
  }

  .ai-footer-accordion__icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
  }

  .ai-footer-accordion__toggle[aria-expanded='true'] .ai-footer-accordion__icon::after {
    transform: translate(-50%, -50%) rotate(0deg);
  }

  .ai-footer-accordion__content {
    display: flex;
    flex-direction: column;
  }

  .ai-footer-customer-club-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.club_bottom_margin }}px;
    {% if block.settings.club_layout == 'horizontal' %}
      display: flex;
      align-items: center;
      gap: {{ block.settings.club_gap }}px;
    {% elsif block.settings.club_layout == 'horizontal_reverse' %}
      display: flex;
      align-items: center;
      flex-direction: row-reverse;
      gap: {{ block.settings.club_gap }}px;
    {% else %}
      display: flex;
      flex-direction: column;
      align-items: {{ block.settings.club_icon_position }};
      gap: {{ block.settings.club_gap }}px;
    {% endif %}
    {% if block.settings.club_background_color != blank %}
      background-color: {{ block.settings.club_background_color }};
      padding: {{ block.settings.club_padding }}px;
      border-radius: {{ block.settings.club_border_radius }}px;
    {% endif %}
  }

  .ai-footer-club-icon-{{ ai_gen_id }} {
    width: {{ block.settings.club_icon_size }}px;
    height: {{ block.settings.club_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    {% if block.settings.club_icon_background_color != blank %}
      background-color: {{ block.settings.club_icon_background_color }};
      padding: {{ block.settings.club_icon_padding }}px;
      border-radius: {{ block.settings.club_icon_border_radius }}px;
    {% endif %}
  }

  .ai-footer-club-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-footer-club-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    {% if block.settings.club_icon_color != blank %}
      fill: {{ block.settings.club_icon_color }};
    {% endif %}
  }

  .ai-footer-club-text-{{ ai_gen_id }} {
    {% if block.settings.club_text_color != blank %}
      color: {{ block.settings.club_text_color }};
    {% else %}
      color: {{ block.settings.master_text_color | default: 'white' }};
    {% endif %}
    font-size: {{ block.settings.club_text_size }}px;
    font-weight: {{ block.settings.club_text_weight }};
    font-style: {{ block.settings.club_text_style }};
    text-transform: {{ block.settings.club_text_transform }};
    line-height: {{ block.settings.club_text_line_height }};
    max-width: {{ block.settings.club_text_max_width }}px;
    text-align: {{ block.settings.club_text_alignment }};
    {% if block.settings.club_text_shadow %}
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    {% endif %}
  }

  .kk-newsletter {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 0 15px 15px;
    {% if newsletter_margin_top > 10 %}
      margin-top: {{ newsletter_margin_top | minus: 10 }}px;
    {% else %}
      margin-top: 0;
    {% endif %}
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .kk-newsletter__body {
    padding-top: 8px;
  }

  .kk-newsletter:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .kk-newsletter:before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: rotate(45deg);
    transition: all 0.6s ease;
    opacity: 0;
    pointer-events: none;
  }

  .kk-newsletter:hover:before {
    animation: ai-newsletter-shimmer-{{ ai_gen_id }} 0.6s ease-in-out;
  }

  @keyframes ai-newsletter-shimmer-{{ ai_gen_id }} {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); opacity: 0; }
    50% { opacity: 1; }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); opacity: 0; }
  }

  .kk-newsletter__title {
    margin-bottom: {{ block.settings.newsletter_title_margin }}px;
    text-align: center;
  }

  .kk-newsletter__form {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.form_element_spacing }}px;
  }

  .kk-field {
    margin-bottom: {{ block.settings.form_element_spacing }}px;
  }

  .kk-input {
    width: 100%;
    height: 48px;
    padding: 12px 16px;
    background: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    font-size: 14px;
    font-family: inherit;
    line-height: 1.4;
    box-sizing: border-box;
    transition: all 0.3s ease;
    outline: none;
  }

  .kk-input:focus {
    border-color: rgba(255, 255, 255, 0.6);
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.2);
    transform: scale(1.02);
  }

  .kk-input::placeholder {
    color: #999;
    opacity: 1;
  }

  .kk-button {
    width: 100%;
    height: 48px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .kk-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
  }

  .kk-button:before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .kk-button:hover:before {
    left: 100%;
  }

  .kk-msg {
    margin-top: {{ block.settings.form_element_spacing }}px;
    font-size: 13px;
    text-align: center;
  }

  .kk-msg--success {
    color: #4ade80;
  }

  .kk-msg--error {
    color: #f87171;
  }

  .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
  }

  .ai-footer-social-icon-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-footer-social-icon-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    fill: {{ block.settings.master_text_color | default: 'white' }};
  }

  .ai-footer-social-icon-{{ ai_gen_id }}:hover {
    {% if block.settings.social_hover_effect == 'scale' %}
      transform: scale(1.1);
    {% elsif block.settings.social_hover_effect == 'lift' %}
      transform: translateY(-2px);
    {% elsif block.settings.social_hover_effect == 'rotate' %}
      transform: rotate(5deg);
    {% endif %}
  }

  .ai-footer-social-icon-{{ ai_gen_id }}--instagram:hover {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  }

  .ai-footer-social-icon-{{ ai_gen_id }}--facebook:hover {
    background: #1877f2;
  }

  .ai-footer-social-icon-{{ ai_gen_id }}--tiktok:hover {
    background: #000000;
  }

  .ai-footer-payment-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.payment_section_bottom_margin }}px;
  }

  .ai-footer-payment-{{ ai_gen_id }} h3 {
    margin-bottom: {{ block.settings.payment_title_margin }}px;
    text-align: center;
  }

  .ai-footer-payment-icons-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: {{ block.settings.payment_icon_spacing }}px;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} {
    width: {{ block.settings.payment_icon_width }}px;
    height: {{ block.settings.payment_icon_height }}px;
    background: white;
    border-radius: 6px;
    padding: 8px 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} img,
  .ai-footer-payment-icon-{{ ai_gen_id }} svg {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .ai-footer-policies-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.policies_bottom_margin }}px;
    padding: 20px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .ai-footer-policies-{{ ai_gen_id }} a,
  .ai-footer-policies-{{ ai_gen_id }} button {
    color: {{ block.settings.master_text_color | default: 'white' }};
    text-decoration: none;
    font-size: 14px;
    opacity: 0.8;
    transition: all 0.3s ease;
    margin: 0 {{ block.settings.policy_link_spacing | divided_by: 2 }}px;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
    padding: 8px 12px;
    border-radius: 4px;
    display: inline-block;
  }

  .ai-footer-policies-{{ ai_gen_id }} a:hover,
  .ai-footer-policies-{{ ai_gen_id }} button:hover {
    opacity: 1;
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
  }

  .ai-footer-policies-{{ ai_gen_id }} .ai-footer-policy-separator-{{ ai_gen_id }} {
    color: {{ block.settings.master_text_color | default: 'white' }};
    opacity: 0.4;
    margin: 0 8px;
    font-size: 12px;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    text-align: center;
    font-size: 12px;
    opacity: 0.6;
    margin-top: {{ block.settings.copyright_top_margin }}px;
    padding-top: 15px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media screen and (max-width: 1199px) {
    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.mobile_column_gap }}px;
    }
  }

  @media screen and (max-width: 989px) {
    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.mobile_column_gap }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_section_spacing }}px;
    }

    .ai-footer-{{ ai_gen_id }} {
      padding: {{ block.settings.footer_padding | times: 0.7 }}px {{ block.settings.footer_padding | times: 0.5 }}px;
    }

    .ai-footer-column-{{ ai_gen_id }} h3 {
      display: none;
    }

    .ai-footer-accordion__toggle {
      display: flex;
    }

    .ai-footer-accordion__content {
      padding-top: 4px;
    }

    .ai-footer-social-{{ ai_gen_id }} {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 15px;
    }

    .ai-footer-payment-icons-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_payment_spacing }}px;
    }

    .ai-footer-policies-{{ ai_gen_id }} a,
    .ai-footer-policies-{{ ai_gen_id }} button {
      margin: 5px {{ block.settings.mobile_policy_spacing | divided_by: 2 }}px;
      font-size: 13px;
    }

    .ai-footer-customer-club-{{ ai_gen_id }} {
      {% if block.settings.club_layout == 'horizontal' or block.settings.club_layout == 'horizontal_reverse' %}
        flex-direction: column;
        align-items: center;
        text-align: center;
      {% endif %}
    }
  }
{% endstyle %}

<footer class="ai-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-content-{{ ai_gen_id }}">
    <div class="ai-footer-main-{{ ai_gen_id }}">
      <div class="ai-footer-column-{{ ai_gen_id }}">
        {% if block.settings.show_newsletter %}
          <div class="kk-newsletter">
            <h3 class="kk-newsletter__title">{{ block.settings.newsletter_heading }}</h3>

            <div class="kk-newsletter__body">
              {% if block.settings.show_customer_club and block.settings.customer_club_icon != blank or block.settings.customer_club_text != blank %}
                <div class="ai-footer-customer-club-{{ ai_gen_id }}">
                  {% if block.settings.customer_club_icon %}
                    <div class="ai-footer-club-icon-{{ ai_gen_id }}">
                      <img
                        src="{{ block.settings.customer_club_icon | image_url: width: 320 }}"
                        alt="{{ block.settings.customer_club_text | escape }}"
                        loading="lazy"
                        width="{{ block.settings.club_icon_size }}"
                        height="{{ block.settings.club_icon_size }}"
                      >
                    </div>
                  {% endif %}
                  {% if block.settings.customer_club_text != blank %}
                    <div class="ai-footer-club-text-{{ ai_gen_id }}">
                      {{ block.settings.customer_club_text }}
                    </div>
                  {% endif %}
